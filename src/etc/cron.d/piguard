# Pi-guard: Night shutdown (energy saving)
45  23  *   *   *   root    PATH="$PATH:/usr/sbin:/usr/local/bin/" piguard shutdown

# Pi-guard: Self-update
45  6   *   *   *   root    PATH="$PATH:/usr/sbin:/usr/local/bin/" piguard update
