# Pi-guard: Night shutdown (energy saving)
45  23  *   *   *   root    PATH="$PATH:/usr/sbin:/usr/local/bin/" piguard shutdown > /var/log/piguard/shutdown.debug.log

# Pi-guard: Update to latest version
0  12   *   *   *   root    PATH="$PATH:/usr/sbin:/usr/local/bin/" piguard self-update > /var/log/piguard/self-update.debug.log
